<section class="admin-products-new">

  <header class="page-header">
    <h1>Register for an Account </h1>
  </header>



  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
    <%= form_for :user, url: '/users/signup' do |form| %>


        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_area :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_area :email, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= form.label :password %>
        <%= form.text_area :password, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.text_area :password_confirmation, class: 'form-control' %>
    </div>





        <%= form.submit 'Create User', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
